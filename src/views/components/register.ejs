<div class="container">
    <div class="left">
      <div class="login">Registration</div>
      <div class="eula">Please, register. You can't use this chat without it.</div>
    </div>
    <div class="right">
        <path d="m 40,120.00016 239.99984,-3.2e-4 c 0,0 24.99263,0.79932 25.00016,35.00016 0.008,34.20084 -25.00016,35 -25.00016,35 h -239.99984 c 0,-0.0205 -25,4.01348 -25,38.5 0,34.48652 25,38.5 25,38.5 h 215 c 0,0 20,-0.99604 20,-25 0,-24.00396 -20,-25 -20,-25 h -190 c 0,0 -20,1.71033 -20,25 0,24.00396 20,25 20,25 h 168.57143" />
        <div class="form">
            <form method="post" action="/register" novalidate>  
                <div class="form-field <%= errors.email ? 'form-field-invalid' : '' %>">
                    <label class="login2" for="login">Login</label>
                    <input class="login-input" id="login" name="login" type="login" value="<%= data.login %>" />
                    <% if (errors.login) { %>
                      <div class="error"><%= errors.login.msg %></div>
                    <% } %>
                </div>
                <div class="form-field <%= errors.email ? 'form-field-invalid' : '' %>">
                    <label class="email" for="email">Email</label>
                    <input class="email-input" id="email" name="email" type="email" value="<%= data.email %>" />
                    <% if (errors.email) { %>
                      <div class="error"><%= errors.email.msg %></div>
                    <% } %>
                </div>
                <div class="form-field <%= errors.password ? 'form-field-invalid' : '' %>">
                    <label class="password" for="password">Password</label>
                    <input class="password-input" id="password" name="password" type="password" value="<%= data.password %>" />
                    <% if (errors.password) { %>
                      <div class="error"><%= errors.password.msg %></div>
                    <% } %>
                </div>
                <input type="submit" id="submit" value="Submit">
            </form>
        </div>
      </div>
  </div>
